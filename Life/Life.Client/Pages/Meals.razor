@page "/Meals"
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meals</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="meal-container">
    <h1>Meals</h1>

    <!-- Meal Item -->
    <div class="meal-item">
        <div class="meal-image">
            <img src="meal_image.jpg" alt="Meal Image" />
        </div>
        <div class="meal-details">
            <h2>Meal Name</h2>
            <div class="meal-diagram">
                <img src="meal_diagram.png" alt="Meal Diagram" />
            </div>
            <div class="ingredients">
                <h3>Ingredients</h3>
                <ul>
                    <li>Ingredient 1</li>
                    <li>Ingredient 2</li>
                    <li>Ingredient 3</li>
                </ul>
            </div>
            <div class="meal-plans">
                <h3>Meal Plans</h3>
                <ul>
                    <li>Plan 1</li>
                    <li>Plan 2</li>
                    <li>Plan 3</li>
                </ul>
            </div>
        </div>
    </div>
</div>
</body>

